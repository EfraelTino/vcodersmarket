{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "sourceMap": true,
    // Configuración estándar para el alias @/
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // Ayuda a que VS Code entienda mejor los módulos
    "moduleResolution": "bundler",
    "jsx": "preserve"
  }
}